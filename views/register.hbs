<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/register">
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input name="name" type="text" class="form-control" id="nameInput">
            </div>

            <div class="form-group">
                <label for="ageInput">Age</label>
                <input name="age" type="number" class="form-control" id="ageInput">
            </div>

            <div class="form-group">
                <label for="sexInput">Sex</label>
                <select name="sex" type="email" class="form-control" id="sexInput">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Better not tell</option>
                </select>
            </div>

            <div class="form-group">
                <label for="passwordInput">Password</label>
                <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
                    placeholder="Re-enter your password here">
            </div>

            <a href="/login"><button type="submit" class="btn btn-primary">Register</button></a>
        </form>
    </div>
</div>
<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/register">
            <div class="form-group">
                <label for="patient_name">Name</label>
                <input name="patient_name" type="text" class="form-control" id="patient_name">
            </div>

            <div class="form-group">
                <label for="patient_age">Age</label>
                <input name="patient_age" type="number" class="form-control" id="patient_age">
            </div>

            <div class="form-group">
                <label for="patient_sex">Sex</label>
                <select name="patient_sex" type="email" class="form-control" id="patient_sex">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Better not tell</option>
                </select>
            </div>
            <div class="form-group">
                <label for="emailInput">Email address</label>
                <input name="emailInput" type="email" class="form-control" id="emailInput">
            </div>
            <div class="form-group">
                <label for="passwordInput">Password</label>
                <input name="passwordInput" type="password" class="form-control" id="passwordInput" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
                    placeholder="Re-enter your password here">
            </div>
            <div class="form-group">
                <label for="patient_image">Select your Image</label>
                <input name="patient_image" type="file" class="form-control" id="patient_image">
            </div>
            <button type="submit" class="btn btn-primary"><a href="login.hbs">Register</a></button>
        </form>
    </div>
</div>